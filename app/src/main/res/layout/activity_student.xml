<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/buss"
        android:layout_alignParentTop="true"
        android:layout_above="@id/fromCampus"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:background="#fed12d"
        android:textSize="20sp"
        android:text="From Campus"

        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/fromCampus"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="From Dhaka"
        android:background="#668d3c"
        android:gravity="center"
        android:layout_below="@id/fromCampus"
        android:id="@+id/fromDhaka"/>



</RelativeLayout>